                        <textarea id="sns-token-gerado-pessoa" rows="4" class="form-control" maxlength="300" placeholder=" "></textarea>
                    </div>

                    <div class="clearfix"></div>
                    <div class="divider-dashed"></div>
                    @*Fim geração token teste*@
                    
                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                        <label for="sns-cd-pessoa">Código Pessoa</label>
                        <input id="sns-cd-pessoa" type="text" class="form-control input-sm" required="required" placeholder=" ">
                    </div>
                    <div class="form-group col-md-6 col-sm-6 col-xs-12 sns-top-space sns-btn-sm">
                        <button id="sns-busca-pessoa" type="button" class="btn sns-btn-ok btn-sm col-md-12 col-sm-12 col-xs-12">
                            <span class="fa fa-search sns-margin-icon sns-icon-sm-position" title="Buscar"></span>Buscar Pessoa
                        </button>
                    </div>

                    <div class="clearfix"></div>
                    <div class="divider-dashed"></div>

                    <div class="form-group col-md-12 col-sm-12 col-xs-12 sns-top-space sns-btn-sm">
                        <button id="sns-busca-pessoa-todos" type="button" class="btn sns-btn-ok btn-sm col-md-12 col-sm-12 col-xs-12">
                            <span class="fa fa-search sns-margin-icon sns-icon-sm-position" title="Buscar Todos"></span>Buscar Todos
                        </button>
                    </div>

                    <div id="sns-hid-todos-pessoa" class="col-md-12 col-sm-12 col-xs-12 table-responsive">
                        <table id="sns-table-pessoa" class="table table-striped table-bordered headings" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="column-title">Cód. Pessoa </th>
                                    <th class="column-title">Tipo Pessoa </th>
                                    <th class="column-title">CPF/CGC </th>
                                    <th class="column-title">Nome </th>
