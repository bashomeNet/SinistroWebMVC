<!-- tool action content -->
<div class="sns-top-toolbox">
    <div class="title_left">
        <div class="btn-group">
            <span id="sns-novo-pessoa" class="fa fa-file sns-tool-action" title="Novo"></span>
            <span id="sns-recupera-pessoa" class="fa fa-folder-open sns-tool-action" title="Recuperar"></span>
